pacstrap -K /mnt base linux linux-firmware nano iwd lxde xorg-xinit pulseaudio firefox

#autostart networking
systemctl enable systemd-networkd.service
systemctl enable systemd-resolved.service
systemctl enable iwd.service

#fix mouse
echo 'Section "InputClass"
        Identifier "libinput touchpad catchall"
        MatchIsTouchpad "on"
        MatchDevicePath "/dev/input/event*"
        Driver "libinput"
        Option "Tapping" "on"
        Option "NaturalScrolling" "true"
EndSection' > /etc/X11/xorg.conf.d/40-libinput.conf 
echo 'exec startlxde' > /home/jake/.xinitrc

ID=$(blkid /dev/mmcblk0p2 -s UUID -o value)
echo "${ID}"
#efibootmgr --create --disk /dev/mmcblk0 --part 1 --label "Arch Linux" --loader /vmlinuz-linux --unicode 'root=UUID=710b4faa-7539-475c-8cbd-d7530e1c70b2 rw initrd=\initramfs-linux.img'
